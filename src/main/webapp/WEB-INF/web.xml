<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Archetype Created Web Application</display-name>

    <context-param>
        <param-name>captchaTimeout</param-name>
        <param-value>120000</param-value>
    </context-param>
    <context-param>
        <param-name>captchaType</param-name>
        <param-value>cookie</param-value>
    </context-param>
    <context-param>
        <param-name>securityFile</param-name>
        <param-value>compShop/src/main/resources/security.xml</param-value>
    </context-param>

    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>ru.otus.ageev.web.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>ru.otus.ageev.web.filter.LocaleFilter</filter-class>
        <init-param>
            <param-name>localeDefault</param-name>
            <param-value>en_EN</param-value>
        </init-param>
        <init-param>
            <param-name>localeParameters</param-name>
            <param-value>en_EN,ru_RU</param-value>
        </init-param>
        <init-param>
            <param-name>localeStorage</param-name>
            <param-value>session</param-value>
        </init-param>
        <init-param>
            <param-name>cookieAge</param-name>
            <param-value>86400</param-value>
        </init-param>

    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>TurnOffCacheFilter</filter-name>
        <filter-class>ru.otus.ageev.web.filter.TurnOffCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TurnOffCacheFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>GzipFilter</filter-name>
        <filter-class>ru.otus.ageev.web.filter.GzipFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GzipFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <resource-ref>
        <description>Computer shop DB Connection</description>
        <res-ref-name>jdbc/ComputerShop</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>Products</servlet-name>
        <servlet-class>ru.otus.ageev.web.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/accessDenied.jsp</location>
    </error-page>
</web-app>



